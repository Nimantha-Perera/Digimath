<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:fontFamily="@font/aladin"
        android:gravity="center"
        android:text="Login &amp; Register DigiMath"
        android:textSize="25dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:id="@+id/username"
        android:background="@drawable/input"
        android:padding="15dp"
        android:maxLength="10"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="User Name"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="-30dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:id="@+id/password"
        android:background="@drawable/input"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/baseline_vpn_key_24"
        android:drawablePadding="-30dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="10"
        android:gravity="center"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:drawableStart="@drawable/icons8_google_32px"
        android:text="login" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"

        android:text="Don't you remember the password? forget now"
        android:id="@+id/forget_pass"
        android:textColor="#0027FF"
        android:gravity="center"
      />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_pass"
        android:layout_marginTop="20dp"
        android:text="more option"
        android:id="@+id/more"
        android:gravity="center"
       />

    <Button
        android:id="@+id/googlelog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input"
        android:drawableStart="@drawable/icons8_google_32px"
        android:text="login with google" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/googlelog"
        android:gravity="center"
        android:id="@+id/ccre"
        android:textColor="@color/black"
        android:text="You don't have any account?"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ccre"
        android:gravity="center"
        android:text="Create Now"
        android:layout_marginTop="10dp"
        android:id="@+id/create_acc"
        android:textSize="15dp"/>

</RelativeLayout>